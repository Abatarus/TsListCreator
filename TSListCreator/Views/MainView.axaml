<UserControl xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
    x:Class="TSListCreator.Views.MainView">
    <Grid ColumnDefinitions="*, Auto">
        <Canvas Grid.Column="0" Background="Gray">
            <Image />
        </Canvas>
        <Grid RowDefinitions="*,Auto,Auto" Grid.Column="1">
            <TabControl Grid.Row="0">
                <TabItem Header="Поля ввода"> 
                    <ScrollViewer> 
                        <ItemsRepeater />
                    </ScrollViewer>
                </TabItem>
                <TabItem Header="Счетчики">
				    <ScrollViewer>
					    <ItemsRepeater />
				    </ScrollViewer>
			    </TabItem>
                <TabItem Header="Галочки"> 
                    <ScrollViewer>
					    <ItemsRepeater />
				    </ScrollViewer>
			    </TabItem>
            </TabControl>
            <Button Content="Сохранить" Grid.Row="1" HorizontalAlignment="Stretch" />
            <Button Content="Копировать в буфер обмена" Grid.Row="2" HorizontalAlignment="Stretch" />
        </Grid>
    </Grid>
 </UserControl>

