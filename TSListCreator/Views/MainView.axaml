<UserControl xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:v="using:TSListCreator.Views"
			 xmlns:vm="using:TSListCreator.ViewModels" 
			 xmlns:controls="clr-namespace:TSListCreator.Controls"
			 d:DesignHeight="450"
			 d:DesignWidth="800"
			 x:DataType="vm:MainViewModel"
			 mc:Ignorable="d"
			 x:Class="TSListCreator.Views.MainView">
	<Grid Background="#bdbdbd"
		  ColumnDefinitions="*, Auto">
		<Image Grid.Column="0"
			   Height="{Binding $parent.Bounds.Height}"
			   HorizontalAlignment="Center"
			   Source="{Binding Image}"
			   Stretch="Uniform" />
		<ItemsControl Grid.Column="0"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch"
					  ItemsSource="{Binding TextBoxes, Mode=TwoWay}">
            <ItemsControl.Styles>
                <Style Selector="ContentPresenter"
                       x:DataType="controls:TsControl">
                    <Setter Property="Canvas.Left"
                            Value="{Binding PosX}"/>
                    <Setter Property="Canvas.Top"
                            Value="{Binding PosY}"/>
                </Style>
            </ItemsControl.Styles>
            <ItemsControl.ItemsPanel>
				<ItemsPanelTemplate>
					<Canvas x:Name="Canvas"
							Background="Transparent"
							PointerMoved="OnPointerMoved"
							PointerPressed="OnPointerPressed"
							PointerReleased="OnPointerReleased">
					</Canvas>
				</ItemsPanelTemplate>
			</ItemsControl.ItemsPanel>

			<ItemsControl.ItemTemplate>
				<DataTemplate>
					<v:TextBoxCanvasView/>
				</DataTemplate>
			</ItemsControl.ItemTemplate>

		</ItemsControl>
		<Grid Grid.Column="1"
			  Background="#eaede8"
			  RowDefinitions="*,Auto,Auto,Auto,Auto">
			<TabControl Grid.Row="0">
				<TabItem Header="Поля ввода">
					<Grid RowDefinitions="Auto, *">
						<Button Grid.Row="0"
								HorizontalAlignment="Stretch"
								Content="Добавить"
								Command="{Binding AddNewTextBox}"
								IsEnabled="{Binding CanInteract}" />
						<ScrollViewer Grid.Row="1">
							<ItemsControl ItemsSource="{Binding TextBoxes, Mode=TwoWay}">
								<ItemsControl.ItemTemplate>
									<DataTemplate>
										<v:TextBoxListView/>
									</DataTemplate>
								</ItemsControl.ItemTemplate>
							</ItemsControl>
						</ScrollViewer>
					</Grid>
				</TabItem>
				<TabItem Header="Счетчики">
					<ScrollViewer>
						<ItemsRepeater />
					</ScrollViewer>
				</TabItem>
				<TabItem Header="Галочки">
					<ScrollViewer>
						<ItemsRepeater />
					</ScrollViewer>
				</TabItem>
				<TabItem Header="Общее" />
			</TabControl>
			<Button Grid.Row="1"
					HorizontalAlignment="Stretch"
					Command="{Binding LoadImage}"
					Content="Выбрать изображение" />
			<Button Grid.Row="2"
					HorizontalAlignment="Stretch"
					Content="Загрузить"
					IsEnabled="{Binding CanInteract}" />
			<Button Grid.Row="3"
					HorizontalAlignment="Stretch"
					Content="Сохранить"
					IsEnabled="{Binding CanInteract}" />
			<Button Grid.Row="4"
					HorizontalAlignment="Stretch"
					Content="Копировать в буфер обмена"
					IsEnabled="{Binding CanInteract}" />
		</Grid>
	</Grid>
</UserControl>

